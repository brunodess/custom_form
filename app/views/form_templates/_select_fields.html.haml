.nested-fields
  = f.input :name
  = f.input :field_type, as: :hidden, input_html: { value: 'select' }
  = f.input :is_mandatory
  = link_to_remove_association 'Remover', f

  .field_values
    = f.simple_fields_for :form_field_values do |field_values|
      = render 'field_values', f:field_values
    .links
      = link_to_add_association 'Adicionar Valor do Campo', f, :form_field_values, partial: 'select_field_values'