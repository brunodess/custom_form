<%= simple_form_for @application_process do |f| %>
    <%= f.input :name %>
    <%= f.input :semester, collection: 1..2, include_blank: false %>
    <%= f.input :year, collection: 1960..2100, selected: Date.today.year %>
    <%= f.input :start_date %>
    <%= f.input :end_date%>
    <%= f.association :form_template, :as => :collection_select, collection: FormTemplate.where('is_letter ==?', false), include_blank: false %>
    <%= f.association :letter_template, :as => :collection_select, collection: FormTemplate.where('is_letter ==?', true), include_blank: false  %>
    <%= f.input :total_letters,input_html: { value: '1' } %>
    <%= f.button :submit %>
<% end %>